<%= content_for :title, "Admin Login" %>
<section class="card w-full max-w-md bg-base-100 shadow-xl">
  <div class="card-body space-y-6">
    <header class="text-center space-y-2">
      <h1 class="text-2xl font-semibold">Admin Login</h1>
      <p class="text-sm opacity-70">Melde dich mit deinem bestehenden Konto an.</p>
    </header>

    <%= form_with url: user_session_path, scope: :user, class: "space-y-4" do |form| %>
      <div class="form-control">
        <%= form.label :email, class: "label" %>
        <%= form.email_field :email, autofocus: true, required: true, class: "input input-bordered w-full" %>
      </div>

      <div class="form-control">
        <%= form.label :password, class: "label" %>
        <%= form.password_field :password, required: true, class: "input input-bordered w-full" %>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer justify-start gap-3">
          <%= form.check_box :remember_me, class: "checkbox" %>
          <span class="label-text">Eingeloggt bleiben</span>
        </label>
      </div>

      <div class="form-control">
        <%= form.submit "Login", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="text-center text-sm opacity-70">
      <%= link_to "Zur Startseite", root_path, class: "link" %>
    </div>
  </div>
</section>
